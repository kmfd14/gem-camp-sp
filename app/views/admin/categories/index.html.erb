<div class="d-flex flex-column align-items-center justify-content-evenly pt-2">
<h1>Admin::Categories#index</h1>
<p><%= link_to 'New Category', new_admin_category_path %></p>
  <ul>
    <% @categories.each do |category| %>
      <li>
        <%= category.name %>
        <%= link_to :edit, edit_admin_category_path(category) %>
        <%= button_to :delete, admin_category_path(category), method: :delete %>
      </li>
    <% end %>
  </ul>
</div>
