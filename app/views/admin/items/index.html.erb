<h3><%= link_to 'New Item', new_admin_item_path %></h3>

<table>
  <thead>
  <td><b>Image</b></td>
  <td><b>Name</b></td>
  <td><b>Quantity</b></td>
  <td><b>Minimum Bets</b></td>
  <td><b>State</b></td>
  <td><b>Batch Count</b></td>
  <td><b>Online at</b></td>
  <td><b>Offline at</b></td>
  <td><b>Start at</b></td>
  <td><b>Status</b></td>
  <td><b>Control</b></td>
  <td><b>Action</b></td>
  </thead>
  <% @items.each do |item| %>
    <tr>
      <td><%= image_tag item.image.url if item.image.present? %></td>
      <td><%= item.name %></td>
      <td><%= item.quantity %></td>
      <td><%= item.minimum_bets %></td>
      <td><%= item.state %></td>
      <td><%= item.batch_count %></td>
      <td><%= item.online_at %></td>
      <td><%= item.offline_at %></td>
      <td><%= item.start_at %></td>
      <td><%= item.status %></td>
      <td>
        <%= button_to 'Start', start_admin_item_path(item), method: :post, class: 'btn btn-success' %>
        <%= button_to 'Pause', pause_admin_item_path(item), method: :post, class: 'btn btn-info' %>
        <%= button_to 'End', end_admin_item_path(item), method: :post, class: 'btn btn-primary' %>
        <%= button_to 'Cancel', cancel_admin_item_path(item), method: :post, class: 'btn btn-danger' %>
      </td>
      <td>
        <%= link_to 'Edit Item', edit_admin_item_path(item) %>
        <%= button_to :delete, admin_item_path(item), method: :delete %>
      </td>
    </tr>
  <% end %>
</table>
