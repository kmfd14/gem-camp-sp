<h3><%= link_to 'New Item', new_admin_item_path %></h3>

<table>
  <thead>
  <td><b>Image</b></td>
  <td><b>Name</b></td>
  <td><b>Quantity</b></td>
  <td><b>Minimum Bets</b></td>
  <td><b>State</b></td>
  <td><b>Batch Count</b></td>
  <td><b>Online at</b></td>
  <td><b>Offline at</b></td>
  <td><b>Start at</b></td>
  <td><b>Status</b></td>
  <td><b>Action</b></td>
  </thead>
  <% @items.each do |item| %>
    <tr>
      <td><%= image_tag item.image.url if item.image.present? %></td>
      <td><%= item.name %></td>
      <td><%= item.quantity %></td>
      <td><%= item.minimum_bet %></td>
      <td><%= item.state %></td>
      <td><%= item.batch_count %></td>
      <td><%= item.online_at %></td>
      <td><%= item.offline_at %></td>
      <td><%= item.start_at %></td>
      <td><%= item.status %></td>
      <td>
        <%= link_to 'Edit', edit_admin_item_path(item) %>
      </td>
    </tr>
  <% end %>
</table>
