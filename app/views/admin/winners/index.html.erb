<div class="d-flex flex-row align-items-center justify-content-center">
  <%= form_tag admin_winners_path, method: :get do %>
    <b><%= 'Filter' %></b>
    <%= text_field_tag :serial_number, params[:serial_number], placeholder: "Search by serial number..." %>
    <%= text_field_tag :email, params[:email], placeholder: "Search by email..." %>
    <%= label_tag :state, "Search by state:" %>
    <%= select_tag :state, options_for_select(['betting', 'won', 'lost', 'cancelled'], params[:state]), include_blank: true %>
    <%= label_tag :start_date, "Search by date:" %>
    <%= date_field_tag :start_date, params[:start_date] %>
    <%= date_field_tag :end_date, params[:end_date] %>
    <%= submit_tag "Search" %>
  <% end %>
</div>
<div class="d-flex flex-row align-winners-center justify-content-lg-center">
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>Serial Number</th>
      <th>Email</th>
      <th>State</th>
      <th>Address</th>
      <th>Created At</th>
      <th>Control</th>
    </tr>
    </thead>
    <tbody>
    <% @winners.each do |winner| %>
      <tr>
        <td><%= winner.bet.serial_number %></td>
        <td><%= winner.user.email %></td>
        <td><%= winner.state %></td>
        <td><%= @winner_addresses[winner.id] %></td>
        <td><%= winner.created_at %></td>
        <td>
          <%= button_to 'Submit', submit_admin_winner_path(winner), class: 'btn btn-success', data: { turbo: false } if winner.may_submit? %>
          <%= button_to 'Pay', pay_admin_winner_path(winner), class: 'btn btn-info', data: { turbo: false } if winner.may_pay? %>
          <%= button_to 'Ship', ship_admin_winner_path(winner), class: 'btn btn-primary', data: { turbo: false } if winner.may_ship? %>
          <%= button_to 'Deliver', deliver_admin_winner_path(winner), class: 'btn btn-danger', data: { turbo: false } if winner.may_deliver? %>
          <%= button_to 'Publish', publish_admin_winner_path(winner), class: 'btn btn-danger', data: { turbo: false } if winner.may_publish? %>
          <%= button_to 'Remove Publish', remove_publish_admin_winner_path(winner), class: 'btn btn-danger', data: { turbo: false } if winner.may_remove_publish? %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>