<div class="d-sm-flex flex-column align-items-center justify-content-center rounded-3 mx-auto w-25 h-75 p-3 mb-2 bg-secondary text-white">
  <h2>Client Log in</h2>
  <section class="d-flex flex-row align-items-center justify-content-evenly pt-2" >
    <%= link_to 'Sign in', new_client_user_session_path, class: "btn btn-outline-light active" %>
    <%= link_to 'Sign Up', new_client_user_registration_path, class: "btn btn-outline-light" %>
  </section>
  <div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-outline mb-4">
        <%= f.label :username, class: "form-label" %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", type: "username", class: "form-control" %>
      </div>

      <div class="form-outline mb-4">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", type: "password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check">
          <%= f.check_box :remember_me, class: "form-check-input", type: "checkbox", value: "" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="form-outline mb-4">
        <%= f.submit "Log In", type: "submit", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
    <%= render "client/shared/links" %>
  </div>
</div>