<h5>Client Shop Page</h5>
<div class="d-flex flex-row align-items-center justify-content-lg-center">
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Status</th>
      <th>Genre</th>
      <th>Amount</th>
      <th>Coin</th>
      <th>Control</th>
    </tr>
    </thead>
    <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= image_tag offer.image.url if offer.image.present? %></td>
        <td><%= offer.name %></td>
        <td><%= offer.status %></td>
        <td><%= offer.genre %></td>
        <td><%= offer.amount %></td>
        <td><%= offer.coin %></td>
        <td>
          <%= link_to 'Buy', client_shop_path(offer) %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>