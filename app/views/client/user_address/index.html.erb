<div class="container-lg d-flex flex-column">
  <div class="d-flex flex-row align-items-center justify-content-evenly gap-2 pb-2">
    <%= link_to 'New Address', new_client_user_address_path, class: "btn btn-outline-secondary w-75" %>
    <%= link_to 'Cancel', client_profile_path, class: "btn btn-outline-secondary w-75" %>
  </div>
  <div class="container-lg d-flex flex-column border border-dark rounded-3 bg-light text-black">
    <div class="container-lg">
      <table class="table table-hover table-responsive text-center">
        <thead>
        <tr>
          <th></th>
          <th>Genre</th>
          <th>Name</th>
          <th>Address</th>
          <th>Remark</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <% @user_addresses.each do |address| %>
          <tr>
            <td>
              <% if address.is_default %>
                <%= 'Default' %>
              <% else %>
                <%= '' %>
              <% end %>
            </td>
            <td><%= address.genre %></td>
            <td><%= address.name %></td>
            <td class="text-justify"><%= "#{address.street_address}, #{address.barangay&.name}, #{address.city&.name}, #{address.province&.name}, #{address.region&.name}" %></td>
            <td><%= address.remark %></td>
            <td>
              <%= link_to 'Edit', edit_client_user_address_path(address), class: "btn btn-primary" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>