<div class="d-sm-flex flex-column align-items-center justify-content-center rounded-3 mx-auto w-25 p-3 mb-2 bg-secondary text-white">
  <h2>Client Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-outline mb-4">
      <%= f.label :username, class: "form-label", for: "form2Example1" %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username", type: "username", id: "form2Example1", class: "form-control" %>
    </div>

    <div class="form-outline mb-4">
      <%= f.label :password, class: "form-label", for: "form2Example1" %><br />
      <%= f.password_field :password, autocomplete: "current-password", type: "password", id: "form2Example1", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check">
        <%= f.check_box :remember_me, class: "form-check-input", type: "checkbox", value: "", id: "form2Example31" %>
        <%= f.label :remember_me, class: "form-check-label", for: "form2Example31" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary btn-block mb-4 w-100", type: "button" %>
    </div>
  <% end %>

  <div class="d-flex flex-column align-items-center justify-content-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
